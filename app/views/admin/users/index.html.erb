<%= link_to "Home Page", root_path%>
<%= link_to "Create User", new_admin_user_path%>
<table>
  <tr>
    <th>Full Name</th>
    <th>Email</th>
    <th>Admin</th>
  <% @users.each do |user| %>
    </tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.is_admin %></td>
      <td><%= link_to "Edit", edit_admin_user_path(user)%></td>
      <td><%= link_to 'Delete', admin_user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to "View As", impersonate_admin_user_path(user) %></td>        
    <tr>
  <% end %>
</table>
<%= paginate @users %>
